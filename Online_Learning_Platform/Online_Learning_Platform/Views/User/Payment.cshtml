                                    <div class="form-outline mb-4">
                                        <input type="text" id="CardHolderName" class="Boxs" placeholder="Card Holder Name"  />
                                    </div>

                                 
                                    <div class="form-outline mb-4">
                                        <input type="text" id="CardNumber" class="Boxs" placeholder="Card Number" style="border: 3px solid;" maxlength="16"/>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="CVV" class="Boxs" placeholder="CVV" style="border: 3px solid;" maxlength="3"/>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="Month" class="Boxs" placeholder="Month" style="border: 3px solid;" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="Year" class="Boxs" placeholder="Year" style="border: 3px solid;" />
                                    </div>


                                    <!-- Submit button -->
                                    <button type="button" class="btn btn-primary btn-block mb-4" onclick="Payments();">
                                        Pay
                                    </button>

                                   
